/* pages/search/search.wxss */
page{
  background-color: #f9f9f9;
}
.search {
  height: 130rpx;
  background-color: #ea932a;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-box {
  
  width: 644rpx;
  height: 65rpx;
  background-color: #f2ba77;
  display: flex;
  justify-content: space-between;
  border-radius: 32rpx;
  color: #fff;
  align-items: center;
  padding: 5rpx 20rpx;
  /* margin-left: 34rpx; */
}
.search-box input{
  height: 65rpx;
  line-height: 65rpx;
  font-size: 15px;

}
.p-box{
  color: #fff;
  font-size: 15px;
}

.hot-search{
  padding: 45rpx 50rpx 0rpx 50rpx;
}

.hot-search-title{
  font-size: 20px;
  margin-bottom: 30rpx;
}

.hot-search-list{
  display: flex;
  flex-wrap: wrap;
}

.hot-search-list view{
   width: 200rpx;
   height: 73rpx;
   background-color: #fff;
   margin-right: 16rpx;
   text-align: center;
   line-height: 73rpx;
   margin-bottom: 20rpx;
   color: #d3d3d3;
   font-size: 14px;
}


/* 搜素的格式 */
/* pages/list/list.wxss */

.list{
  background-color: #fff;
  width: 708rpx;
  height: 280rpx;
  margin: 28rpx 22rpx;
  border-radius: 20rpx;
}

.recipe-image{
  width: 320rpx;
  height: 280rpx;
  border-bottom-left-radius: 20rpx;
  border-top-left-radius: 20rpx;
}
.list-info{
  width: 388rpx;
  height: 280rpx;
  padding: 35rpx;
}
.list{
  display: flex;
  
}

.list-info-userinfo image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.xing image{
  width: 180rpx;
  height: 30rpx;
}

.number  image{
  width: 40rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.list-name{
  font-size: 18px;
  font-weight: 300;
}
.list-info-userinfo{
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  font-size: 13px;
}

.xing{
  margin-top: 20rpx;
}
.number{
  display: flex;
  margin-top: 10rpx;
}
.number view {
  margin-right: 70rpx;
  font-size: 12px;
  display: flex;
  align-items: center;
}